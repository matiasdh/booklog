<div class="flex justify-center w-full">
  <div class="bg-white shadow-xl p-8 border border-gray-200 rounded-2xl w-full max-w-md">
    <h1 class="mb-6 font-bold text-gray-800 text-2xl text-center">Log in</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% if flash[:alert] %>
        <div class="bg-amber-100 mb-4 p-3 border border-amber-200 rounded-md text-amber-800 text-sm">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", required: true,
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center mb-4">
          <%= f.check_box :remember_me, class: "mr-2 text-indigo-600 focus:ring-indigo-500" %>
          <%= f.label :remember_me, class: "text-sm text-gray-600" %>
        </div>
      <% end %>

      <div class="mb-6">
        <%= f.submit "Log in", class: "w-full bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 transition-colors font-semibold" %>
      </div>
    <% end %>

    <div class="text-indigo-600 text-sm text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
