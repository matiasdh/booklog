<% content_for :title, "Users" %>

<% if notice %>
  <p class="text-sm text-green-800 bg-green-100 border border-green-200 px-4 py-2 rounded mb-4"><%= notice %></p>
<% end %>

<h1 class="text-2xl font-bold text-gray-800 mb-6">Users</h1>

<div id="users" class="space-y-4 mb-8">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
      <%= link_to "Show this user", user, class: "text-indigo-600 hover:underline text-sm font-medium" %>
    </p>
  <% end %>
</div>

<%= link_to "New user", new_user_path, class: "inline-block bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700 transition-colors text-sm font-medium" %>
