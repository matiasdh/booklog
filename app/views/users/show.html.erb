<div class="m-auto mx-auto mt-10 p-6 max-w-4xl text-center">
  <!-- Avatar -->
  <div class="flex justify-center">
    <div class="flex justify-center items-center bg-indigo-500 rounded-full w-24 h-24 font-bold text-white text-3xl">
      <%= user.username.first.upcase %>
    </div>
  </div>

  <!-- Username -->
  <h2 class="mt-4 font-bold text-gray-900 text-3xl">@<%= user.username %></h2>

  <!-- Action button -->
  <div class="flex justify-center items-center mx-auto mt-4 h-12 transition">
    <% if current_user == user %>
      <%= link_to "Edit profile", edit_user_path(user),
        class: "bg-gray-800 text-white px-6 py-2 rounded-full hover:bg-gray-700 transition" %>
    <% else %>
      <%= render "users/follow/button", locals: { user: user } %>
    <% end %>
  </div>

  <!-- Followers / Following -->
  <div class="flex justify-center space-x-10 mt-6 text-gray-700">
    <div>
      <p class="font-semibold text-xl">12</p>
      <p class="text-sm">Followers</p>
    </div>
    <div class="border-stone-900 border-l-1 min-h-full"></div>
    <div>
      <p class="font-semibold text-xl">4</p>
      <p class="text-sm">Following</p>
    </div>
  </div>

  <h2 class="flex mt-16 w-full font-bold text-3xl">Posts</h2>

  <div class="space-y-6 mt-9 text-left">
    <%= render partial: 'posts/post', collection: current_user.posts, locals: { user: current_user } %>
  </div>
</div>
