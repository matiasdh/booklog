
<div class="flex flex-grow justify-between items-center mb-4">
  <h1 class="px-1 font-bold text-2xl">My profile</h1>
  <%= link_to "Edit", edit_user_path(user), class: "hover:bg-gray-400 px-4 py-2 rounded-sm font-medium hover:text-white text-sm hover:underline" %>
</div>

<div class="space-y-4 bg-white shadow-sm p-6 border-gray-300 border-b rounded-sm h-56">
  <div class="flex justify-normal items-center gap-x-2">
    <p class="text-gray-500">Username</p>
    <p class="text-gray-800"><%= user.username %></p>
  </div>

  <div class="flex justify-normal items-center gap-x-2">
    <p class="text-gray-500">Email</p>
    <p class="text-gray-800"><%= user.email %></p>
  </div>

  <div class="flex justify-normal items-center gap-x-2">
    <p class="text-gray-500">Created at</p>
    <p class="text-gray-800"><%= l(user.created_at, format: :long) %></p>
  </div>

  </div>
</div>
