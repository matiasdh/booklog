<%= form_with model: post do |form| %>
  <div class="mb-4" data-controller="hello">
    <%= form.text_area :body,
      placeholder: "What's on your mind?",
      rows: 3,
      class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none" %>
  </div>

  <div class="text-right">
    <%= form.submit 'Post',
      class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-5 py-2 rounded-lg transition duration-200" %>
  </div>
<% end %>
