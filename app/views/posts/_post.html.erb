<%= turbo_frame_tag post, class: "block" do %>
  <div class="bg-white shadow mx-auto p-4 rounded-2xl" data-controller="comments">
    <div class="flex items-start space-x-4">
      <!-- Avatar -->
      <div class="flex justify-center items-center bg-indigo-500 rounded-full w-12 h-12 font-bold text-white text-lg">
        <%= post.user.username.first.upcase %>
      </div>

      <div class="flex-1">
        <!-- Header -->
        <div class="flex justify-between items-center">
          <div>
            <p class="font-semibold text-gray-900">@<%= post.user.username %></p>
            <p class="text-gray-500 text-sm"
            data-controller="time-ago"
            data-time-ago-datetime-value="<%= post.created_at.iso8601 %>">
              <%= time_ago_in_words(post.created_at) %> ago
            </p>
          </div>
        </div>

        <!-- Body -->
        <p class="mt-3 text-gray-800">
          <%= post.body %>
        </p>

        <!-- Actions -->
        <div class="flex justify-end space-x-4 mt-4 text-gray-600 text-sm">
          <button class="flex items-center space-x-1 w-24 hover:text-blue-600 active:scale-90 transition-transform hover:-translate-y-0.5 cursor-pointer" data-action="click->comments#toggleForm" data-comments-target="toggleButton">
            <%= icon "chat-bubble-left", class: "size-6", variant: "solid" %>
            <span>Comment</span>
          </button>


          <%= form_with url: like_post_path(post), method: post.liked_by?(user) ? :delete : :post, class: "inline", data: { controller: "likes", action: "click->likes#toggleLike:prevent", "likes-liked-value": post.liked_by?(user) } do |f| %>
            <%= f.button type: "submit", class: "w-22 hover:-translate-y-0.5 active:scale-90 transition-transform cursor-pointer flex items-center space-x-1 #{'text-pink-600' if post.liked_by? user} hover:text-pink-700", data: { "likes-target": "likesButton" }  do %>
              <%= icon "heart", class: "size-6", variant: "solid" %>
              <span data-likes-target="likesCount"><%= post.likes_count %></span>
              <span data-likes-target="textLabel"><%= "Like".pluralize(post.likes_count) %></span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="flex-1">
      <!-- Comment form -->
      <div data-comments-target="form" class="hidden">
        <%= render 'posts/comments/form', post: post %>
      </div>

      <!-- Comments -->
      <% if post.comments.any? %>
        <div class="space-y-4 mt-4 pt-4 border-gray-200 border-t">
          <%= render partial: "posts/comments/comment", collection: post.comments.order(created_at: :desc) %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
