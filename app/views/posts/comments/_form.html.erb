<div class="mt-6">
  <%= form_with model: [post, Comment.new], class: "flex items-start space-x-3" do |f| %>
    <div class="flex-1">
      <%= f.text_area :body, rows: 2, placeholder: "Write a comment...", class: "w-full p-2 border border-gray-300 rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm" %>
      <div class="mt-2 text-right">
        <%= f.submit "Comment", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-1 text-sm rounded" %>
      </div>
    </div>
  <% end %>
</div>
