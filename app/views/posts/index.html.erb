<%= render 'form', post: Post.new %>

<div class="space-y-6 m-auto max-w-4xl" id="posts-list">
  <%= turbo_stream_from "posts" %>
  <%= render partial: 'post', collection: @posts, locals: { user: current_user } %>
</div>

<div id="next-page-link">
  <% if @pagy.next %>
    <%= render partial: "posts/load_more_button", locals: { pagy: @pagy } %>
  <% end %>
</div>
