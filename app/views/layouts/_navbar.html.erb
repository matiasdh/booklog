
<aside class="top-0 sticky flex-shrink-0 p-2 pt-16 w-64 h-screen">
  <nav>
    <h2 class="items-center mb-14 font-black font-stretch-condensed text-4xl text-center">
      Book<span class="italic">Log</span>
    </h2>
    <ul class="space-y-2 bg-stone-50 p-4 rounded-3xl text-xl text-right">
      <% nav_items = [
        { label: "My profile", path: user_path(current_user), icon: "user" },
        { label: "Discover", path: root_path, icon: "globe-alt" },
        { label: "Following", path: following_posts_path, icon: "hashtag" }
      ] %>
      <% nav_items.each do |item| %>
        <% active = current_page?(item[:path]) %>
        <li class="block">
          <%= link_to item[:path],
            class: "rounded-xl p-2 py-3 pr-4 flex items-center justify-end space-x-2 [&>*]:transition-all " +
                  (active ? "bg-black text-gray-100 space-x-4" : "text-gray-700 hover:text-gray-900 hover:bg-teal-300 hover:space-x-4") do %>
            <span><%= item[:label] %></span>
            <%= icon item[:icon], class: "size-6", variant: active ? "solid" : "outline" %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </nav>
</aside>
